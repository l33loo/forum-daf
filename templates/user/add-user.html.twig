{% extends "page.html.twig" %}

{% block page_title %}{{ "Add new user" }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <div class="container-narrow">
                {{ form_start(form) }}
                <div class="card-body">
                    {{ form_errors(form) }}
                    <div class="mb-3">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mb-3">
                        {{ form_row(form.password) }}
                    </div>
                    <div class="form-footer">
                        <button type="submit" class="btn btn-primary w-100">{{ 'Create new account'|trans }}</button>
                    </div>
                    {{ form_row(form._token) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}